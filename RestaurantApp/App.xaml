<Application x:Class="RestaurantApp.App"  
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
            xmlns:converters="clr-namespace:RestaurantApp.Converters"
            StartupUri="MainWindow.xaml">  
   <Application.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:OrderStatusToBrushConverter x:Key="OrderStatusToBrushConverter"/>
        <Style x:Key="NavButtonStyle" TargetType="Button">  
           <Setter Property="Background" Value="#FF34495E"/>  
           <Setter Property="Foreground" Value="White"/>  
           <Setter Property="FontWeight" Value="Bold"/>  
           <Setter Property="Padding" Value="10,5"/>  
           <Setter Property="Margin" Value="5,0"/>  
           <Setter Property="BorderThickness" Value="0"/>  
           <Setter Property="Cursor" Value="Hand"/>  
           <Setter Property="Template">  
               <Setter.Value>  
                   <ControlTemplate TargetType="Button">  
                       <Border Background="{TemplateBinding Background}"  
                               CornerRadius="5">  
                           <ContentPresenter HorizontalAlignment="Center"  
                                             VerticalAlignment="Center"/>  
                       </Border>  
                   </ControlTemplate>  
               </Setter.Value>  
           </Setter>  
       </Style>  
   </Application.Resources>  
</Application>
