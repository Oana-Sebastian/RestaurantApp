<UserControl x:Class="RestaurantApp.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid>
        <Border Width="500" VerticalAlignment="Center" HorizontalAlignment="Center"
                Background="White" CornerRadius="10" BorderBrush="#FFE0E0E0" BorderThickness="1">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Text="Create an Account" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- First Name & Last Name -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="First Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10" FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Last Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10" FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- Email -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" FontSize="14"/>
                </StackPanel>

                <!-- Phone Number -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock Text="Phone Number" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" FontSize="14"/>
                </StackPanel>

                <!-- Delivery Address -->
                <StackPanel Grid.Row="4" Margin="0,0,0,15">
                    <TextBlock Text="Delivery Address" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding DeliveryAddress, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" FontSize="14" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>
                </StackPanel>

                <!-- Password -->
                <Grid Grid.Row="5" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Padding="10" FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Confirm Password" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Padding="10" FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- Error Message -->
                <TextBlock Grid.Row="6" Text="{Binding ErrorMessage}" Foreground="Red" 
                           Margin="0,0,0,15" TextWrapping="Wrap"/>

                <!-- Register Button -->
                <Button Grid.Row="7" Content="Register" Command="{Binding RegisterCommand}" 
                        CommandParameter="{Binding ElementName=PasswordBox}"
                        Background="#FF2196F3" Foreground="White" BorderThickness="0"
                        Padding="0,12" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>

                <!-- Login Link -->
                <TextBlock Grid.Row="8" HorizontalAlignment="Center">
                    <Run Text="Already have an account?"/>
                    <Hyperlink Command="{Binding NavigateToLoginCommand}">Login here</Hyperlink>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>