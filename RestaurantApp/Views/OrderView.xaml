<UserControl x:Class="RestaurantApp.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantApp.Views"
             xmlns:converters="clr-namespace:RestaurantApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Menu for Ordering -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Place Your Order" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Search Controls -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Input -->
                <TextBox Grid.Column="0" Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="8" FontSize="14" Margin="0,0,10,0" 
                         />

                <!-- Search Button -->
                <Button Grid.Column="1" Content="Search" Command="{Binding SearchCommand}" 
                        Padding="15,8" Background="#FF2196F3" Foreground="White" BorderThickness="0"/>
            </Grid>

            <!-- Menu Content -->
            <TabControl Grid.Row="2">
                <TabItem Header="All Items">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander Header="{Binding Name}" Margin="0,0,0,10" IsExpanded="False">
                                        <StackPanel>
                                            <!-- Products -->
                                            <ItemsControl ItemsSource="{Binding Products}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="10">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Product Info -->
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding PortionQuantity, StringFormat={}Portion: {0}g}" 
                                                                               FontSize="12" Opacity="0.8"/>
                                                                </StackPanel>

                                                                <!-- Price -->
                                                                <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat={}{0:C}}" 
                                                                           VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="SemiBold"/>

                                                                <!-- Add Button -->
                                                                <Button Grid.Column="2" Content="Add" 
                                                                        Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                                        CommandParameter="{Binding}"
                                                                        Padding="15,5" Background="#FF4CAF50" Foreground="White" BorderThickness="0"
                                                                        Visibility="{Binding IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                                <!-- Unavailable Label -->
                                                                <TextBlock Grid.Column="2" Text="Unavailable" Foreground="Red" FontWeight="SemiBold"
                                                                           VerticalAlignment="Center"
                                                                           Visibility="{Binding IsAvailable, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Menus -->
                                            <ItemsControl ItemsSource="{Binding Menus}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="10"
                                                                Background="#FFFFF8E1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Menu Info -->
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding MenuProductsText}" FontSize="12" Opacity="0.8"/>
                                                                </StackPanel>

                                                                <!-- Price -->
                                                                <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat={}{0:C}}" 
                                                                           VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="SemiBold"/>

                                                                <!-- Add Button -->
                                                                <Button Grid.Column="2" Content="Add" 
                                                                        Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                                        CommandParameter="{Binding}"
                                                                        Padding="15,5" Background="#FF4CAF50" Foreground="White" BorderThickness="0"
                                                                        Visibility="{Binding IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                                <!-- Unavailable Label -->
                                                                <TextBlock Grid.Column="2" Text="Unavailable" Foreground="Red" FontWeight="SemiBold"
                                                                           VerticalAlignment="Center"
                                                                           Visibility="{Binding IsAvailable, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Products">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AllProducts}">
                            <ItemsControl.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ItemsControl.GroupStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Product Template - same as above -->
                                    <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Product Info -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding PortionQuantity, StringFormat={}Portion: {0}g}" 
                                                           FontSize="12" Opacity="0.8"/>
                                            </StackPanel>

                                            <!-- Price -->
                                            <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat={}{0:C}}" 
                                                       VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="SemiBold"/>

                                            <!-- Add Button -->
                                            <Button Grid.Column="2" Content="Add" 
                                                    Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Padding="15,5" Background="#FF4CAF50" Foreground="White" BorderThickness="0"
                                                    Visibility="{Binding IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                            <!-- Unavailable Label -->
                                            <TextBlock Grid.Column="2" Text="Unavailable" Foreground="Red" FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsAvailable, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Menus">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AllMenus}">
                            <ItemsControl.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ItemsControl.GroupStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Menu Template - same as above -->
                                    <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="10"
                                            Background="#FFFFF8E1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Menu Info -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding MenuProductsText}" FontSize="12" Opacity="0.8"/>
                                            </StackPanel>

                                            <!-- Price -->
                                            <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat={}{0:C}}" 
                                                       VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="SemiBold"/>

                                            <!-- Add Button -->
                                            <Button Grid.Column="2" Content="Add" 
                                                    Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Padding="15,5" Background="#FF4CAF50" Foreground="White" BorderThickness="0"
                                                    Visibility="{Binding IsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                            <!-- Unavailable Label -->
                                            <TextBlock Grid.Column="2" Text="Unavailable" Foreground="Red" FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsAvailable, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Right Panel - Cart -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Cart Title -->
            <TextBlock Grid.Row="0" Text="Your Cart" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <!-- Cart Items -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Empty Cart Message -->
                    <TextBlock Text="Your cart is empty." HorizontalAlignment="Center" Margin="0,20,0,0"
                               Visibility="{Binding IsCartEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Cart Items List -->
                    <ItemsControl ItemsSource="{Binding CartItems}" 
                                  Visibility="{Binding IsCartEmpty, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Quantity Controls -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                                            <Button Content="-" Command="{Binding DataContext.DecrementQuantityCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                    CommandParameter="{Binding}" Width="25" Height="25"/>
                                            <TextBlock Text="{Binding Quantity}" VerticalAlignment="Center" Width="30" TextAlignment="Center"/>
                                            <Button Content="+" Command="{Binding DataContext.IncrementQuantityCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                    CommandParameter="{Binding}" Width="25" Height="25"/>
                                        </StackPanel>

                                        <!-- Item Details -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ItemPrice, StringFormat={}{0:C}}" FontSize="12"/>
                                        </StackPanel>

                                        <!-- Subtotal and Remove -->
                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C}}" FontWeight="SemiBold"/>
                                            <Button Content="Remove" Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                    CommandParameter="{Binding}" Padding="5,2" Margin="0,3,0,0"
                                                    Background="Transparent" Foreground="#FFE53935" BorderThickness="0"
                                                    FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Order Summary and Checkout -->
            <Border Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="0,1,0,0" Padding="0,10,0,0" Margin="0,10,0,0"
                    Visibility="{Binding IsCartEmpty, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <StackPanel>
                    <!-- Subtotal -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Subtotal:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="{Binding Subtotal, StringFormat={}{0:C}}" FontWeight="SemiBold"/>
                    </Grid>

                    <!-- Shipping -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Shipping:"/>
                        <TextBlock Grid.Column="1" Text="{Binding ShippingCost, StringFormat={}{0:C}}"/>
                    </Grid>

                    <!-- Discount -->
                    <Grid Margin="0,0,0,5" Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Discount:" Foreground="#FF4CAF50"/>
                        <TextBlock Grid.Column="1" Text="{Binding DiscountAmount, StringFormat={}-{0:C}}" Foreground="#FF4CAF50"/>
                    </Grid>

                    <!-- Total -->
                    <Grid Margin="0,5,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Total:" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Grid.Column="1" Text="{Binding Total, StringFormat={}{0:C}}" FontWeight="Bold" FontSize="16"/>
                    </Grid>

                    <!-- Place Order Button -->
                    <Button Content="Place Order" Command="{Binding PlaceOrderCommand}" 
                            Background="#FF4CAF50" Foreground="White" BorderThickness="0"
                            Padding="0,12" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>